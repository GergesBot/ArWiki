{
    "name": "gergesbot/arwiki",
    "type": "project",
    "license": "GPL-3.0-or-later",
    "description": "Source code for GergesBot in the Arabic Wikipedia.",
    "autoload": {
        "psr-4": {
            "Bot\\": "src/"
        }
    },
    "authors": [
        {
            "name": "GergesShamon",
            "email": "gerges.shamoon.dev@gmail.com"
        }
    ],
    "require": {
        "wiki-connect/mediawiki-api": "^1.0.6",
        "monolog/monolog": "^3.7",
        "wiki-connect/wikibase-api": "^1.0"
    },
    "require-dev": {
        "mediawiki/mediawiki-codesniffer": "~46.0",
        "data-values/common": "~1.2.0",
        "data-values/data-values": "~2.0",
        "data-values/geo": "~4.0",
        "data-values/number": "~0.13.0",
        "data-values/serialization": "~1.0",
        "data-values/time": "~1.0",
        "data-values/validators": "~1.0.0",
        "phpstan/phpstan": "^2.0"
    },
    "scripts": {
        "test": [
            "phpstan analyse"
        ]
    },
    "config": {
        "platform": {
            "php": "8.1.29"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }

}
